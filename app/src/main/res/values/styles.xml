<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleTextView">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="title2TextView">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="headingTextViewWhite">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="headingTextViewBlack">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="headerTextViewWhite">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="textViewWhite">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="textViewWhiteBold">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="textViewRv">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="textViewRvBlack">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="textViewAbout">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="textViewClickable">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="buttonPrimary">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="buttonSecondary">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>

    <style name="editText" parent="Widget.Design.TextInputLayout">
        <item name="android:backgroundTint">@dimen/button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_normal</item>
    </style>


</resources>
